#include <iostream>
#include <stdlib.h>
#include <map>

using namespace std;

map<int, int> counts;

int countSequence(int number) {
  if(number == 1) return 1;
  if(counts.find(number) != counts.end()) { return counts[number]; }
  int count = 0;
  if(number % 2 == 0) count = 1+countSequence(number/2);
  else count = 1+countSequence(3*number + 1);
  counts[number] = count;
  return count;
}

int main(int argc, char **argv) {
  int max = 1000;
  if(argc > 1) {
    max = atoi(argv[1]);
  }

  int maxCount = 0;
  int maxNumber = 1;
  for(int i=1; i!=max; i++) {
    int count = countSequence(i);
    if(count > maxCount) {
      maxCount = count;
      maxNumber = i;
    }
  }
  cout << maxNumber << ": " << maxCount << endl;
  return 0;
}
